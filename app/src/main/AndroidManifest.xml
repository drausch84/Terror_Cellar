<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.terrorcellar">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/terror_cellar_logo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/terror_cellar_logo"
        android:supportsRtl="true"
        android:theme="@style/Theme.TerrorCellar">
        <activity
            android:name=".LandingPageActivity"
            android:exported="true"
            android:theme="@style/Theme.TerrorCellar.noactionbar" />
        <activity
            android:name=".LoginActivity"
            android:exported="true"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".SplashScreenActivity"
            android:exported="true"
            android:theme="@style/Theme.TerrorCellar.noactionbar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>