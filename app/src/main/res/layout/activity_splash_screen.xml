<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#010202"
    tools:context=".SplashScreenActivity">

    <ImageView
        android:id="@+id/terrorCellarLogo"
        android:layout_width="258dp"
        android:layout_height="267dp"
        android:layout_marginStart="77dp"
        android:layout_marginTop="175dp"
        android:layout_marginEnd="76dp"
        android:layout_marginBottom="289dp"
        android:contentDescription="@string/app_name"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/terror_cellar_logo" />

    <TextView
        android:id="@+id/splashText"
        android:layout_width="317dp"
        android:layout_height="123dp"
        android:layout_marginStart="49dp"
        android:layout_marginTop="482dp"
        android:layout_marginEnd="45dp"
        android:layout_marginBottom="126dp"
        android:fontFamily="@font/henny_penny"
        android:rotationX="13"
        android:text="@string/terror_cellar"
        android:textAlignment="center"
        android:textColor="#880808"
        android:textSize="50sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>