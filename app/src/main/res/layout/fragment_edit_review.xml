<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="20dp"
    tools:context=".fragments.EditReviewFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/editReviewHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/henny_penny"
            android:paddingBottom="25dp"
            android:text="Edit \nMovie Review"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:textStyle="bold"/>

        <ImageView
            android:id="@+id/Poster"
            android:layout_width="match_parent"
            android:layout_height="166dp"
            android:layout_marginTop="20dp"
            android:contentDescription="Change Poster"
            tools:ignore="ImageContrastCheck"
            tools:src="@tools:sample/avatars" />
        
        <TextView
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/carrois_gothic"
            android:text="Movie Title"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp">

            <ImageView
                android:id="@+id/uploadImg"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@drawable/upload_icon" />

            <Button
                android:id="@+id/editMoviePosterBtn"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:backgroundTint="#880808"
                android:fontFamily="@font/henny_penny"
                android:text="Change Movie Poster"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:textStyle="bold" />
        </LinearLayout>

        <EditText
            android:id="@+id/editMovieName"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/textview_border"
            android:fontFamily="@font/andada"
            android:hint="Edit Movie Name"
            android:layout_marginTop="10dp"
            android:paddingLeft="10dp"
            android:textSize="14sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/editRatingText"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/andada"
                android:text="Edit Rating:"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold" />
            <RatingBar
                android:id="@+id/editMovieRating"
                style="@style/CustomRatingBarStyle"
                android:layout_width="100dp"
                android:clickable="true"
                android:isIndicator="false"
                android:rating="5"
                tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck"
                android:layout_height="match_parent" />
        </LinearLayout>

        <EditText
            android:id="@+id/editMovieReviewTextField"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_marginTop="12dp"
            android:layout_height="125dp"
            android:background="@drawable/textview_border"
            android:fontFamily="@font/andada"
            android:hint="Edit Movie Review"
            android:paddingLeft="10dp"
            android:paddingBottom="60dp"
            android:scrollbars="vertical"
            android:textSize="14sp" />

        <Button
            android:id="@+id/add_review_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:backgroundTint="#880808"
            android:fontFamily="@font/henny_penny"
            android:text="Edit Review"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:textStyle="bold"/>

    </LinearLayout>

</ScrollView>